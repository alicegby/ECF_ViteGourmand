<div class="ajx-list">
    <h1 class="menuplat-header">
        Liste des plats par menu
        <button class="filter-toggle" data-type="menuplat" data-url="{{ path('menuplat_list') }}">
            <img src="{{ asset('Visuels/Icônes/Filter_DarkBrown.png') }}" alt="Filtrer">
        </button>
    </h1>

    <button class="ajax-btn add-menuplat" 
            data-url="{{ path('menuplat_new') }}" 
            data-default="false">
        <img src="{{ asset('Visuels/Icônes/Plus_Beige.png') }}" alt="Nouvelle association">
        Nouvelle association
    </button>

    <div class="filter-panel" data-type="menuplat">
    <button class="close-panel">
        <img src="{{ asset('Visuels/Icônes/Croix_DarkBrown.png') }}" alt="Fermer">
    </button>

    <div class="filter-group">
        <label for="menu-filter">Filtrer par menu</label>
        <select id="menu-filter" name="menu">
            <option value="">Tous</option>
            {% for menu in menus %}
                <option value="{{ menu.id }}">{{ menu.nom }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="filter-group">
        <label for="keyword-filter">Mot-clé</label>
        <input type="text" id="keyword-filter" name="keyword" placeholder="Rechercher..." value="{{ app.request.query.get('keyword') }}">
    </div>

    <button type="button" class="apply-filters">Appliquer</button>
    <button type="button" class="reset-filters">Réinitialiser les filtres</button>
</div>

<table class="menuplat-table">
    <thead>
        <tr>
            <th>Menu</th>
            <th>Plat</th>
            <th>Ordre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for mp in menuPlats %}
            <tr>
                <td>{{ mp.menu.nom }}</td>
                <td>{{ mp.plat.titrePlat }}</td>
                <td>{{ mp.ordre }}</td>

                <td class="action-buttons">
                    <button class="ajax-btn btn-see" data-url="{{ path('menuplat_show', {'id': mp.id}) }}">
                        <img src="{{ asset('Visuels/Icônes/See_Beige.png')}}" class="image-plat">
                        Voir &amp; modifier
                    </button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>