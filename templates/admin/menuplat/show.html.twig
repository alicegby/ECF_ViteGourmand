<div class="ajx-list">
    <div class="commande-actions">
        <button class="ajax-btn btn-back" data-url="{{ path('menuplat_list') }}">
            <img src="{{ asset('Visuels/Icônes/Back_Beige.png') }}">Retour à la liste
        </button>
    </div>

    <h1>Détails de l'association<br>{{ menuPlat.plat.titrePlat }} - {{ menuPlat.menu.nom }}</h1>

    <div class="detail-mp">
        <p>Menu : {{ menuPlat.menu.nom }}</p>
        <p>Plat : {{ menuPlat.plat.titrePlat }}</p>
        <p>Ordre : {{ menuPlat.ordre }}</p>
    </div>

    <div class="plat-actions">
        <button class="btn ajax-btn" data-url="{{ path('menuplat_edit', {'id': menuPlat.id}) }}">
            <img src="{{ asset('Visuels/Icônes/Edit_Beige.png') }}" alt="Modifier">
            Modifier
        </button>
        <form method="post"
            action="{{ path('menuplat_delete', {'id': menuPlat.id}) }}"
            onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette association ?');"
            style="display:inline-block;">
            
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menuPlat.id) }}">

            <button class="btn plat-btn-delete" type="submit">
                <img src="{{ asset('Visuels/Icônes/Delete_Beige.png') }}" alt="Supprimer">
                Supprimer
            </button>
        </form>
    </div>

</div>