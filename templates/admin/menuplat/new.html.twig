<div class="ajx-list">
    <div class="commande-actions">
        <button class="ajax-btn btn-back" data-url="{{ path('menuplat_list') }}">
            <img src="{{ asset('Visuels/Icônes/Back_Beige.png') }}">
            Retour à la liste
        </button>
    </div>

    <h1 class="menu-header">Créer une association</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}


    {{ form_start(form, {
        'attr': {'class': 'ajax-menuplat-form'},
        'enctype': 'multipart/form-data',
        'method': 'POST',
        'action': menuPlat is defined ? path('menuplat_edit', {'id': menuPlat.id}) : path('menuplat_new')
    }) }}

        <div class="form-group">
            {{ form_label(form.menu) }}
            {{ form_widget(form.menu, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.menu) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plat) }}
            {{ form_widget(form.plat, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.plat) }}
        </div>

        <div class="form-group">
            {{ form_label(form.ordre) }}
            {{ form_widget(form.ordre, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.ordre) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-submit">
                <img src="{{ asset('Visuels/Icônes/Select_Beige.png') }}" alt="">
                {{ menuPlat is defined ? 'Sauvegarder les modifications' : 'Créer l\'association' }}
            </button>
        </div>

    {{ form_end(form) }}

</div>