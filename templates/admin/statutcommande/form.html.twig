{% extends 'base.html.twig' %}

{% block title %}
    {{ statut is defined ? 'Modifier le statut' : 'Nouveau statut' }}
{% endblock %}

{% block body %}
<h1>{{ statut is defined ? 'Modifier le statut' : 'Nouveau statut' }}</h1>

{{ form_start(form) }}
    <div>
        {{ form_label(form.libelle) }}
        {{ form_widget(form.libelle) }}
        {{ form_errors(form.libelle) }}
    </div>

    <button type="submit">
        {% if statut is defined %}
            <img src="{{ asset('Visuels/Icônes/Edit_Beige.png') }}" alt="Modifier">Modifier le statut
        {% else %}
            <img src="{{ asset('Visuels/Icônes/Plus_Beige.png') }}" alt="Ajouter">Créer le statut
        {% endif %}
    </button>
{{ form_end(form) }}

<a href="{{ path('statutcommande_list') }}">
    <img src="{{ asset('Visuels/Icônes/Back_Beige.png') }}" alt="Retour">Retour à la liste
</a>
{% endblock %} 