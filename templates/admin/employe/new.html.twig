<div class="ajx-list">
    <div class="commande-actions">
        <button class="ajax-btn btn-back" data-url="{{ path('admin_plats_list') }}">
            <img src="{{ asset('Visuels/Icônes/Back_Beige.png') }}">
            Retour à la liste
        </button>
    </div>

    <h1 class="employe-header">Créer un compte employé</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="employe-new-container">
    {{ form_start(form, {
        'attr': { 'class': 'ajax-employe-form' },
        'enctype': 'multipart/form-data',
        'action': path('employe_new'),
        'method': 'POST'
    }) }}

            <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, { attr: { class: 'form-input' } }) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom, { attr: { class: 'form-input' } }) }}
            {{ form_errors(form.prenom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { attr: { class: 'form-input' } }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.motDePasse) }}
            {{ form_widget(form.motDePasse, { 'attr': { 
                'class': 'form-control', 
                'placeholder': employe.id ? 'Laisser vide pour conserver le mot de passe' : 'Mot de passe' 
            } }) }}
            {{ form_errors(form.motDePasse) }}
        </div>

        <div class="form-group">
            {{ form_label(form.telephone) }}
            {{ form_widget(form.telephone, { attr: { class: 'form-input' } }) }}
            {{ form_errors(form.telephone) }}
        </div>

        <div class="form-group">
            {{ form_label(form.role) }}
            {{ form_widget(form.role, { attr: { class:'form-select'} }) }}
            {{ form_errors(form.role) }}
        </div>

        <div class="form-group">
            {{ form_label(form.actif) }}
            {{ form_widget(form.actif, { attr: { class: 'form-checkbox' } }) }}
            {{ form_errors(form.actif) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-submit">
                <img src="{{ asset('Visuels/Icônes/Select_Beige.png') }}" alt="">
                Sauvegarder le fromage
            </button>
        </div>

    {{ form_end(form) }}
</div>