{% extends 'base.html.twig' %}

{% block title %}Liste des Menus{% endblock %}

{% block body %}
<h1>Liste des Menus</h1>

<a href="{{ path('admin_menu_new') }}" class="btn">
    <img src="{{ asset('Visuels/Icônes/Plus_Beige.png') }}" alt="Ajouter"> Nouveau Menu
</a>

{# Formulaire de filtres #}
<form method="get" action="{{ path('menu_list') }}" class="filter-form">
    <label for="theme">Thème :</label>
    <select name="theme" id="theme">
        <option value="">Tous</option>
        {% for theme in themes %}
            <option value="{{ theme.id }}" {% if selectedTheme == theme.id %}selected{% endif %}>
                {{ theme.nom }}
            </option>
        {% endfor %}
    </select>

    <label for="regime">Régime :</label>
    <select name="regime" id="regime">
        <option value="">Tous</option>
        {% for regime in regimes %}
            <option value="{{ regime.id }}" {% if selectedRegime == regime.id %}selected{% endif %}>
                {{ regime.nom }}
            </option>
        {% endfor %}
    </select>

    <label for="keyword">Mot-clé :</label>
    <input type="text" name="keyword" id="keyword" value="{{ keyword|default('') }}" placeholder="Nom du menu">

    <button type="submit" class="btn">
        <img src="{{ asset('Visuels/Icônes/Search_Beige.png') }}" alt="Filtrer"> Filtrer
    </button>
</form>

<table>
    <thead>
        <tr>
            <th>Nom du Menu</th>
            <th>Thème</th>
            <th>Régime</th>
            <th>Nombre de personnes minimum</th>
            <th>Stock</th>
            <th>Prix par personne</th>
            <th>Description</th>
            <th>Conditions</th>
            <th>Image Principale</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.titreMenu }}</td>
                <td>{{ menu.theme ? menu.theme.nom : '-' }}</td>
                <td>{{ menu.regime ? menu.regime.nom : '-' }}</td>
                <td>{{ menu.nbPersMin }}</td>
                <td>{{ menu.stock }}</td>
                <td>{{ menu.prixParPersonne }} €</td>
                <td>{{ menu.description }}</td>
                <td>
                    {% if menu.conditions|length > 0 %}
                        {{ menu.conditions|map(c => c.nom)|join(', ') }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% set mainImage = menu.images|filter(i => i.estPrincipale)|first %}
                    {% if mainImage %}
                        <img src="{{ asset(mainImage.url) }}" alt="{{ mainImage.altText }}">
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('menu_show', {'id': menu.id}) }}" class="btn">
                        <img src="{{ asset('Visuels/Icônes/See_Beige.png') }}" alt="Voir">Voir
                    </a>
                    <a href="{{ path('admin_menu_edit', {'id': menu.id}) }}" class="btn">
                        <img src="{{ asset('Visuels/Icônes/Edit_Beige.png') }}" alt="Modifier">Modifier
                    </a>
                    <form action="{{ path('admin_menu_delete', {'id': menu.id}) }}" method="post" onsubmit="return confirm('Supprimer ce menu ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menu.id) }}">
                        <button type="submit" class="btn">
                            <img src="{{ asset('Visuels/Icônes/Delete_Beige.png') }}" alt="Supprimer">Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}