<div class="ajx-list">
    <div class="commande-actions">
        <button class="ajax-btn btn-back" data-url="{{ path('personnel_list') }}">
            <img src="{{ asset('Visuels/Icônes/Back_Beige.png') }}">
            Retour à la liste
        </button>
    </div>

    <h1 class="personnel-header">Créer un personnel</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="personnel-new-container">
        {{ form_start(form, {
            'attr': { 'class': 'ajax-personnel-form' },
            'enctype': 'multipart/form-data',
            'action': path('personnel_new'),
            'method': 'POST'
        }) }}

            <div class="form-group">
                {{ form_label(form.titrePersonnel) }}
                {{ form_widget(form.titrePersonnel, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.titrePersonnel) }}
            </div>
            <div class="form-group">
                {{ form_label(form.category) }}
                {{ form_widget(form.category, { attr: { class:'form-select'} }) }}
                {{ form_errors(form.category) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { attr: { class: 'form-textarea' } }) }}
                {{ form_errors(form.description) }}
            </div>
           <div class="form-group">
                {{ form_label(form.stock) }}
                {{ form_widget(form.stock, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.stock) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prixHeure) }}
                {{ form_widget(form.prixHeure, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.prixHeure) }}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-submit">
                    <img src="{{ asset('Visuels/Icônes/Select_Beige.png') }}" alt="">
                    Sauvegarder le fromage
                </button>
        </div>
    {{ form_end(form) }}
</div>