<div class="ajx-list">
    <h1 class="boissons-header">
    Liste des boissons
        <button class="filter-toggle" data-type="boissons" data-url="{{ path('boissons_list') }}">
            <img src="{{ asset('Visuels/Icônes/Filter_DarkBrown.png') }}" alt="Filtrer">
        </button>
    </h1>

    <button class="ajax-btn add-boissons" 
        data-url="{{ path('boissons_new') }}" 
        data-default="false">
        <img src="{{ asset('Visuels/Icônes/Plus_Beige.png') }}" alt="Créer une boisson">
        Créer une boisson
    </button>

    <div class="filter-panel" data-type="boissons">
        <button class="close-panel">
            <img src="{{ asset('Visuels/Icônes/Croix_DarkBrown.png') }}" alt="Fermer">
        </button>

        <div class="filter-group">
            <label for="category-filter">Filtrer par catégorie</label>
            <select id="category-filter" name="category">
                <option value="">Tous</option>
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.libelle }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="filter-group">
            <label for="keyword-filter">Mot-clé</label>
            <input type="text" id="keyword-filter" name="keyword" placeholder="Rechercher..." value="{{ app.request.query.get('keyword') }}">
        </div>

        <button type="button" class="apply-filters">Appliquer</button>
        <button type="button" class="reset-filters">Réinitialiser les filtres</button>
    </div>

    <table class="boissons-table">
        <thead>
            <tr>
                <th>Nom de la boisson</th>
                <th>Catégorie</th>
                <th>Stock</th>
                <th>Prix par bouteille</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for boisson in boissons %}
            <tr>
                <td>{{ boisson.titreBoisson }}</td>
                <td>{{ boisson.category ? boisson.category.libelle : '-' }}</td>
                <td>{{ boisson.stock }}</td>
                <td>{{ boisson.prixParBouteille }} €</td>

                <td class="action-buttons">
                    <button class="ajax-btn btn-see" data-url="{{ path('boissons_show', {'id': boisson.id}) }}">
                        <img src="{{ asset('Visuels/Icônes/See_Beige.png')}}" class="image-plat">
                        Voir &amp; modifier
                    </button>
                </td>
            </tr>
        {% else %}
        <tr>
            <td>Aucune boisson trouvée.</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>