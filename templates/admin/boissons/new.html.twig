<div class="ajx-list">
    <div class="commande-actions">
        <button class="ajax-btn btn-back" data-url="{{ path('admin_plats_list') }}">
            <img src="{{ asset('Visuels/Icônes/Back_Beige.png') }}">
            Retour à la liste
        </button>
    </div>

    <h1 class="boisson-header">Créer une boisson</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="boisson-new-container">
    {{ form_start(form, {
        'attr': { 'class': 'ajax-boissons-form' },
        'enctype': 'multipart/form-data',
        'action': path('boissons_new'),
        'method': 'POST'
    }) }}

    <div class="form-group">
                {{ form_label(form.titreBoisson) }}
                {{ form_widget(form.titreBoisson, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.titreBoisson) }}
            </div>
            <div class="form-group">
                {{ form_label(form.category) }}
                {{ form_widget(form.category, { attr: { class:'form-select'} }) }}
                {{ form_errors(form.category) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { attr: { class: 'form-textarea' } }) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_label(form.stock) }}
                {{ form_widget(form.stock, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.stock) }}
            </div>
            <div class="form-group">
                {{ form_label(form.qteParPers) }}
                {{ form_widget(form.qteParPers, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.qteParPers) }}
            </div>
            <div class="form-group">
                {{ form_label(form.minCommande) }}
                {{ form_widget(form.minCommande, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.minCommande) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prixParBouteille) }}
                {{ form_widget(form.prixParBouteille, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.prixParBouteille) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.image) }}
            </div>
            <div class="form-group">
                {{ form_label(form.alt) }}
                {{ form_widget(form.alt, { attr: { class: 'form-input' } }) }}
                {{ form_errors(form.alt) }}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-submit">
                    <img src="{{ asset('Visuels/Icônes/Select_Beige.png') }}" alt="">
                    Sauvegarder la boisson
                </button>
        </div>
    {{ form_end(form) }}

</div>