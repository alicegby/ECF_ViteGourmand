{% extends 'base.html.twig' %}

{% block title %}Contact - Vite &amp; Gourmand{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block content %}
<main>
    <div class="contact-page">
        <h1>Contactez-nous</h1>

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(contactForm, {'attr': {'class': 'contact-form'}}) }}

            <div class="form-group {{ contactForm.nom.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.nom, {'attr': {'class': 'form-input'}}) }}
            </div>

            <div class="form-group {{ contactForm.prenom.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.prenom, {'attr': {'class': 'form-input'}}) }}
            </div>

            <div class="form-group {{ contactForm.email.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.email, {'attr': {'class': 'form-input'}}) }}
            </div>

            <div class="form-group {{ contactForm.statut.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.statut, {'attr': {'class': 'form-radio'}}) }}
            </div>

            <div class="form-group {{ contactForm.theme.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.theme, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="form-group {{ contactForm.objet.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.objet, {'attr': {'class': 'form-input'}}) }}
            </div>

            <div class="form-group {{ contactForm.message.vars.valid ? '' : 'field-error' }}">
                {{ form_row(contactForm.message, {'attr': {'class': 'form-textarea'}}) }}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">Envoyer</button>
            </div>

        {{ form_end(contactForm) }}
    </div>
</main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}