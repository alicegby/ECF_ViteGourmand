{% extends 'base.html.twig' %}

{% block title %}Inscription - Vite &amp; Gourmand{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block content %}
<div id="login-container">
    <h2>Créer un compte</h2>

    {# Messages flash #}
    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash-error">{{ message }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}

    <div class="form-group">
        {{ form_label(registrationForm.nom) }}
        {{ form_widget(registrationForm.nom, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.nom) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.prenom) }}
        {{ form_widget(registrationForm.prenom, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.prenom) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.telephone) }}
        {{ form_widget(registrationForm.telephone, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.telephone) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.adressePostale) }}
        {{ form_widget(registrationForm.adressePostale, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.adressePostale) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.codePostal) }}
        {{ form_widget(registrationForm.codePostal, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.codePostal) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.ville) }}
        {{ form_widget(registrationForm.ville, {'attr': {'required': 'required'}}) }}
        {{ form_errors(registrationForm.ville) }}
    </div>

    <button type="submit">S’inscrire</button>

    {{ form_end(registrationForm) }}

    <p>
        Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
    </p>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}