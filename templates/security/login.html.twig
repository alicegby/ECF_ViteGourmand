{% extends 'base.html.twig' %}

{% block title %}Connexion - Vite &amp; Gourmand{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block content %}
<div id="login-container">
    <h2>Connexion</h2>  

    {# Messages flash #}
    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash-error">{{ message }}</div>
    {% endfor %}

    {# Erreur de connexion #}
    {% if error %}
        <div class="flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" value="{{ last_email|default('') }}" name="email" id="email" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="password" id="password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">Se connecter</button>
    </form>

    <p>
        Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a>
    </p>
    <p>
        Vous êtes un employé ? <a href="{{ path('admin_login') }}">Connectez-vous ici</a> 
    </p>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}